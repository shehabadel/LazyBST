{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "label": "C/C++: g++.exe build active file",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${workspaceFolder}\\a.exe",
            ],
        
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}